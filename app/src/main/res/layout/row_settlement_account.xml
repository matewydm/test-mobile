<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp">

        <RelativeLayout
            android:id="@+id/usernameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_toStartOf="@+id/inviteIcon"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="27sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/billNumberLabel"
                android:text="$3"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/billNumberLabel"
                android:layout_marginStart="15dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:id="@+id/usernameLabel"
                android:text="Imie Nazwisko"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/usernameLabel"
                android:layout_marginStart="15dp"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:id="@+id/chargeLabel"
                android:text="5.00"
                />

        </RelativeLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:id="@+id/actionIcon"
            android:src="@drawable/ic_approve"
            android:tint="@color/colorAccent"
            android:layout_marginEnd="20dp"
            />

    </RelativeLayout>

</RelativeLayout>